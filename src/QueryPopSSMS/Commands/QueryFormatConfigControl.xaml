             Width="300" Height="430"
             Name="MyToolWindow" Background="White">
  <Grid>
    <StackPanel Orientation="Vertical" Background="White">

      <StackPanel Orientation="Vertical">

        <Label Margin="8,8,8,0" HorizontalAlignment="Left" FontSize="12" Content="Ancho Máximo:" Height="24"/>
        <TextBox x:Name="txtMaxLenght" FontSize="12" Margin="8,0,8,0" Height="24" />

        <Label Margin="8,8,8,0" HorizontalAlignment="Left" FontSize="12" Content="Espacios por TAB:" Height="24"/>
        <TextBox x:Name="txtTABSpace" FontSize="12" Margin="8,0,8,0" Height="24" />

        <CheckBox x:Name="chkComasTraseras" Margin="8,16,8,0" HorizontalAlignment="Left" Content="Comas Traseras"/>
        <CheckBox x:Name="chkPalabrasClaveMayus" Margin="8,8,8,0" HorizontalAlignment="Left" Content="Palabras Clave en Mayúsculas"/>
        <CheckBox x:Name="chkSaltoSeccionesOn" Margin="8,8,8,0" HorizontalAlignment="Left" Content="Salto en Secciones ON"/>
        <CheckBox x:Name="chkEspaciosDespuesComa" Margin="8,8,8,0" HorizontalAlignment="Left" Content="Espacios Después de Coma"/>
        <CheckBox x:Name="chkEstandarPalabrasClave" Margin="8,8,8,0" HorizontalAlignment="Left" Content="Activar Estandarización de Pablabras Claves"/>

        <CheckBox x:Name="chkExpListaIn" Margin="8,8,8,0" HorizontalAlignment="Left" Content="Expandir Listas IN"/>
        <CheckBox x:Name="chkExpListaComas" Margin="8,8,8,0" HorizontalAlignment="Left" Content="Expandir Listas de Coma"/>
        <CheckBox x:Name="chkExpDeclacionesCase" Margin="8,8,8,0" HorizontalAlignment="Left" Content="Expandir Declaraciones CASE"/>
        <CheckBox x:Name="chkExpExpresionBooleanas" Margin="8,8,8,0" HorizontalAlignment="Left" Content="Expandir Expresiones Booleanas"/>
        <CheckBox x:Name="chkExpCondicionesBetween" Margin="8,8,8,0" HorizontalAlignment="Left" Content="Expandir Condiciones BETWEEN"/>

        <Button Margin="8,16,8,0" Content="Guardar" Click="button1_Click"/>
        <Button Margin="8,8,8,0" Content="Cancelar" Click="Button2_Click"/>

